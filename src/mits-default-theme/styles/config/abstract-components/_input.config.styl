// =============================================================================
// INPUT
// =============================================================================



// 1. Add .1rem to get even value — better for aligning with Button.

$input-height            = $unit-4x + .1rem // [1]
$input-padding-h         = $unit-sm
$input-border-width      = 0
$input-border            = 0
$input-border-radius     = $global-radius

$input-font-size         = $font-size
$input-font-weight       = 400

$input-color             = $body-color-strong
$input-bg-color          = $color-primary-soft
$input-box-shadow        = none

$input-placeholder-color = rgba($input-color, .44)





// States
// =============================================================================

$input-hover-bg-color             = lighten($input-bg-color, 25%)
$input-active-bg-color            = $input-hover-bg-color

$input-focus-bg-color             = lighten($input-hover-bg-color, 20%)

$input-readonly-color             = $body-color

$input-disabled-bg-color          = $input-bg-color
$input-disabled-color             = $body-color
$input-disabled-placeholder-color = rgba($input-color, .28)
$input-disabled-label-color       = $body-color-light





// Size Variants
// =============================================================================

// 1. Add .1rem to get even value — better for aligning with Button.

$input-sm-height = $unit-3x + .1rem // [1]





// Label
// =============================================================================

$input-label-color = $body-color





// Prefix & Suffix
// =============================================================================

$input-prefix-width = $unit-4x
$input-suffix-width = $unit-4x





// Icon
// =============================================================================

$input-icon-color = $input-placeholder-color





// Toggle
// =============================================================================

// Toggles are checkboxes, radios, etc.

// 1. Add more contrast with background since it's smaller element.

$input-toggle-bg-color = darken($input-bg-color, 5%) // [1]